//- index.jade
extends ./layout.jade

block content
  div.content
    div.chatArea
      ul#messages

      form
        input#m(type="text", required="true")
        button#send Send
        
        select#language(name='language') 
          option(value='mt-enus-eses' selected=sid=='mt-enus-eses') English to Spanish
          option(value='mt-eses-enus' selected=sid=='mt-eses-enus') Español a Inglés
          option(value='mt-enus-frfr' selected=sid=='mt-enus-frfr') English to French
          option(value='mt-frfr-enus' selected=sid=='mt-frfr-enus') Français vers Anglais
          option(value='mt-enus-ptbr' selected=sid=='mt-enus-ptbr') English to Portuguese
          option(value='mt-ptbr-enus' selected=sid=='mt-ptbr-enus') Português para Inglês
          option(value='mt-arar-enus' selected=sid=='mt-arar-enus') Arabic to English
  

  script(src='/socket.io/socket.io.js')
  script(src='/js/jquery.js')
  script(src='/js/chat.js')
  script(src='/js/main.js')